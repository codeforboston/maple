{
  "hosting": {
    "public": "out",
    "cleanUrls": true,
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "functions": [
    {
      "predeploy": ["yarn build:functions"],
      "source": "functions",
      "codebase": "maple",
      "runtime": "nodejs20",
      "runtimeConfig": ".runtimeconfig.json"
    },
    {
      "predeploy": [
        ". llm/venv/bin/activate && python3 -m pip install -r llm/requirements.txt"
      ],
      "source": "llm",
      "codebase": "maple-llm",
      "runtime": "python311"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 3010
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    }
  },
  "storage": {
    "rules": "storage.rules"
  },
  "extensions": {
    "firestore-send-email": "firebase/firestore-send-email@0.1.36"
  }
}
