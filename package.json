{
  "name": "digital-testimony-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:functions": "next lint -d functions/src && yarn --cwd functions build",
    "check-formatting": "prettier --check .",
    "check-types": "tsc --noEmit",
    "deploy:backend": "firebase deploy --only firestore,functions",
    "dev": "next dev",
    "dev:emulators": "node scripts/dev-emulators.js",
    "dev:emulators-with-data": "node scripts/dev-emulators.js --import tests/integration/exportedTestData",
    "dev:functions": "yarn --cwd functions dev",
    "export": "next build && next export",
    "export-test-data": "firebase --project demo-dtp emulators:export --only firestore tests/integration/exportedTestData",
    "export:nolint": "next build --no-lint && next export",
    "fix": "next lint --fix; prettier --write .",
    "postinstall": "yarn --cwd functions install",
    "lint": "next lint",
    "serve": "firebase emulators:start --only hosting",
    "start": "next start",
    "test:integration": "jest -c jest.integration.config.js",
    "test:integration-ci": "node scripts/test-integration-ci.js",
    "test:system": "jest -c jest.system.config.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.17",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^12.1.10",
    "awesome-debounce-promise": "^2.1.0",
    "bootstrap": "5.1.3",
    "firebase": "^9.6.4",
    "fuse.js": "^6.5.3",
    "leaflet": "^1.7.1",
    "leaflet-defaulticon-compatibility": "^0.1.1",
    "leaflet-geosearch": "^3.2.1",
    "leaflet-providers": "^1.11.0",
    "leaflet-search": "2.9.8",
    "leaflet.markercluster": "^1.4.1",
    "linkifyjs": "^3.0.0-beta.3",
    "lodash": "^4.17.21",
    "next": "12",
    "next-on-netlify": "^2.9.0",
    "papaparse": "^5.3.0",
    "react": "^17.0.2",
    "react-async-hook": "^4.0.0",
    "react-bootstrap": "^2.1.1",
    "react-dom": "^17.0.2",
    "react-firebaseui": "^6.0.0",
    "react-leaflet-geojson-patterns": "^1.1.0",
    "react-select": "^5.2.2",
    "react-twitter-embed": "^4.0.4",
    "sidebar-v2": "^0.4.0",
    "styled-components": "^5.3.3",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/styled-components": "^5.1.21",
    "concurrently": "^7.0.0",
    "eslint": "^8.7.0",
    "eslint-config-next": "^12.0.9",
    "eslint-config-prettier": "^8.3.0",
    "firebase-admin": "^10.0.2",
    "firebase-tools": "10.1.2",
    "ini": "^1.3.5",
    "inquirer": "^6.5.1",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "nanoid": "^3.3.1",
    "prettier": "2.5.1",
    "sass": "^1.49.0",
    "typescript": "4.5.5"
  }
}
